{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "public", ".next", "*.mdx", "*.css", ".vscode/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noShadowRestrictedNames": "off",
				"noArrayIndexKey": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"style": {
				"useConst": "off",
				"noUselessElse": "off",
				"noNonNullAssertion": "off",
				"noParameterAssign": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"bracketSameLine": false,
			"indentWidth": 4,
			"lineWidth": 120,
			"semicolons": "always",
			"trailingCommas": "all",
			"arrowParentheses": "always"
		}
	}
}
